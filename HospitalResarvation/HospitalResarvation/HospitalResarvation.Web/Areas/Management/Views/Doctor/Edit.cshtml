@model Doctor

<div class="row">
	<div class="col-12">
		<div class="card border-top border-0 border-4 border-dark">
			<div class="card-body p-5">
				
				<div class="card-title text-center">
					<i class="bx bxs-user-circle text-dark font-50"></i>
					<h5 class="mb-5 mt-2 text-dark">Doktor Düzenle</h5>
				</div>
				<hr>

				<form class="row g-3" method="post" enctype="multipart/form-data">
				<input type="hidden" asp-for="Id" />

                <div class="col-12">
                    <label asp-for="FirstName" class="form-label">Adı</label>
                    <div class="input-group input-group-lg">
                        <input type="text" class="form-control border-start-0" asp-for="FirstName" placeholder="Adı">
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>
                </div>


				<div class="col-12">
					<label asp-for="LastName" class="form-label">Soyadı</label>
					<div class="input-group input-group-lg">
						<input type="text" class="form-control border-start-0" asp-for="LastName" placeholder="Soyadı">
						<span class="text-danger" asp-validation-for="LastName"></span>
					</div>
				</div>

					<div class="col-12">
					<label asp-for="Title" class="form-label">Ünvanı</label>
						<div class="input-group input-group-lg">
						<input type="text" class="form-control border-start-0" asp-for="Title" placeholder="Ünvanı">
						<span class="text-danger" asp-validation-for="Title"></span>
						</div>
					</div>



				<div class="col-12">
					<label asp-for="Email" class="form-label">Email</label>
					<div class="input-group input-group-lg">
						<input type="text" class="form-control border-start-0" asp-for="Email" placeholder="Email">
						<span class="text-danger" asp-validation-for="Email"></span>
					</div>
				</div>



				<div class="col-12">
					<label asp-for="Phone" class="form-label">Telefon</label>
					<div class="input-group input-group-lg">
						<input type="text" class="form-control border-start-0" asp-for="Phone" placeholder="Telefon">
						<span class="text-danger" asp-validation-for="Phone"></span>
					</div>
				</div>

				<div class="col-12">
					<label asp-for="Adress" class="form-label">Adres</label>
					<div class="input-group input-group-lg">
						<input type="text" class="form-control border-start-0" asp-for="Adress" placeholder="Adres">
						<span class="text-danger" asp-validation-for="Adress"></span>
					</div>
				</div>

					<div class="col-12">
						<label asp-for="ImageUrl" class="form-label">Resim</label>
						<img src="@Model.ImageUrl" width="200px" />
						<input type="file" class="form-control border-start-0" name="img" id="img" accept="*/image">
						<span class="text-danger" asp-validation-for="ImageUrl"></span>
					</div>

					<div class="col-12">
						<label asp-for="DepartmentId" class="form-label">Kategori</label>
						<div class="input-group input-group-lg">
							<select asp-for="DepartmentId" asp-items="@ViewBag.DepartmentId" class="form-control"></select>
							<span class="text-danger" asp-validation-for="DepartmentId"></span>
						</div>
					</div>


					<div class="col-12">
						<label asp-for="Paycheck" class="form-label">Maaş</label>
						<div class="input-group input-group-lg">
							<input type="number" class="form-control border-start-0" asp-for="Paycheck" placeholder="Maaş">
							<span class="text-danger" asp-validation-for="Paycheck"></span>
						</div>
					</div>

					<div class="col-12">
						<label asp-for="Status" class="form-label">Durumu</label>
						<select class="form-select mb-3" asp-for="Status">
							<option value="true">Aktif</option>
							<option value="false">Pasif</option>
						</select>
					</div>

					<div class="col-12">
						<div class="d-grid">
							<button type="submit" class="btn btn-dark btn-lg px-5"><i class="bx bxs-lock-open"></i>Kaydet</button>
						</div>
					</div>

					<hr>
				</form>
			</div>
		</div>
	</div>
</div>