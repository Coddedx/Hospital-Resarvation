<div class="row">
	<div class="col-md-6">
		<form class="d-flex" asp-action="Create" asp-controller="Appointment">
			<input name="searchString" class="form-control me-1" type="search" placeholder="Hasta Tc" aria-label="Search">
			<button class="btn btn-dark" type="submit" name="action" value="search">Hasta Ara</button>
