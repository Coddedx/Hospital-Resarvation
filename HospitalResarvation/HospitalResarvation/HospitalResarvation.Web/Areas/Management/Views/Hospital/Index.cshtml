@model IEnumerable<Hospital>


@*	<a class="btn- btn-success"  asp-area="Management" asp-controller="Hospital" asp-action="Index"></a>
*@
<a class="btn btn-success" asp-area="Management"
   asp-controller="Hospital"
   asp-action="Create">Ekle</a>

<div class="card radius-15">
	<div class="card-body">
		<div class="card-title">
			<h4 class="mb-0">Hastane</h4>
		</div>
		<hr>
		<div class="table-responsive">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th scope="col">Adı</th>
						<th scope="col">Adres</th>
						<th scope="col">Mail</th>
						<th scope="col">Telefon</th>
						 <th scope="col">Durumu</th>
						<th scope="col">#</th>
					</tr>
				</thead>
				<tbody>

					@foreach(var item in Model){
						<tr>
							<td>@item.Name</td>
							<td>@item.Adress</td>
							<td>@item.Email</td>
							<td>@item.Phone</td>
                            <td>
                                @if (item.Status)
                                {
                                    <span>Aktif</span>
                                }
                                else
                                {
                                    <span>Pasif</span>
                                }
                            </td>
							<td>

								<a class="btn btn-primary" 
								asp-area="Management" 
								asp-controller="Hospital" 
								asp-action="Edit" 
								asp-route-id="@item.Id">Düzenle
								</a>

								<a class="btn btn-danger"
								asp-area="Management"
							   asp-controller="Hospital"
							   asp-action="Delete"
							   asp-route-id="@item.Id">Sil
								</a>

							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
